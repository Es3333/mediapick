    <script>
        function showFavoriteMoviesForm(step) {
            var forms = document.querySelectorAll('.sign__form--movies');
            var registrationForm = document.getElementById('registrationForm');

            forms.forEach(function(form, index) {
                if (index === step - 1) {
                    form.style.display = 'block';
                    // Hide registration form when first favorite movie form is displayed
                    if (index === 0) {
                        registrationForm.style.display = 'none';
                    }
                } else {
                    form.style.display = 'none';
                }
            });
        }
    </script>
