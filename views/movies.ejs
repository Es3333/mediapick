    <style>
        /* Add your custom CSS here */
        body {
            font-family: 'Open Sans', sans-serif;
        }

        .movie-container {
            text-align: center;
            margin: 0 10px 10px;
            vertical-align: top;
            width: calc(20% - 10px);
            box-sizing: border-box;
        }

        .movie-name {
            font-weight: bold;
            color: pink;
            margin-top: 10px;
        }

        /* Additional CSS for carousel and card */
        .home__carousel .item {
            padding: 0 5px;
        }

        .card {
            text-align: center;
        }

        .card__cover img {
            width: 100%;
            height: auto;
        }

        .card__title {
            margin-top: 10px;
            font-weight: bold;
        }

        .card__category {
            font-size: 14px;
            color: #999;
            margin-bottom: 5px;
        }

        .card__rate {
            font-size: 16px;
            color: #ff55a5;
        }
    </style>
</head>

<body class="body">

    <!-- header -->
    <header class="header">
        <div class="header__wrap">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="header__content">
                            <!-- header logo -->
                            <a href="index" class="header__logo">
                                <img src="img/logo-color.png" alt="">
                            </a>
                            <!-- end header logo -->

                            <!-- header auth -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- end header -->

    <!-- home -->
    <section class="home">
        <!-- home bg -->
       <div class="sign section--bg" data-bg="img/section/section.jpg">
        <!-- end home bg -->

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="home__title"><b>RECOMMENDATIONS </b> </h1>
                    <button class="home__nav home__nav--prev" type="button">
                        <i class="icon ion-ios-arrow-round-back"></i>
                    </button>
                    <button class="home__nav home__nav--next" type="button">
                        <i class="icon ion-ios-arrow-round-forward"></i>
                    </button>
                </div>

                <div class="col-12">
                    <div class="owl-carousel home__carousel">
                        <!-- Use a loop to generate carousel items for each poster -->
                       <!-- Update the loop to include ratings -->
                       <% for (let i = 0; i < posters.length; i++) { %>
                        <div class="item">
                            <!-- card -->
                            <div class="card card--big">
                                <div class="card__cover">
                                    <img src="<%= posters[i] %>" alt="Movie Poster" onerror="this.src='Screenshot (384).png';">
                                    <!-- Adjust this link if you have a play button overlay -->
                                    <a href="#" class="card__play">
                                        <i class="icon ion-ios-play"></i>
                                    </a>
                                </div>
                                <div class="card__content">
                                    <!-- Use appropriate data for movie name and category -->
                                    <h3 class="card__title"><%= name[i] %></h3>
                                    <span class="card__category">
                                        <!-- Add categories here if available -->
                                    </span>
                                    <!-- Display rating here -->
                                    <span class="card__rate"><i class="icon ion-ios-star"></i> <%= ratings[i] %></span>
                                </div>
                            </div>
                            <!-- end card -->
                        </div>
                    <% } %>
                    
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end home -->

    <!-- footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">


                <!-- footer list -->
                <div class="col-12 col-sm-4 col-md-3">
                    <h6 class="footer__title">Contact US</h6>
                    <ul class="footer__list">

                        <li><a href="mailto:esalmmokhtar333@gmail.com">esalmmokhtar333@gmail.com</a></li>
                    </ul>

                </div>
                <!-- end footer list -->
                <div class="col-11">
                    <div class="footer__copyright">

                        <li><a href="#">Designed and devolped by Eslam Khaled </a></li>

                   

                    </div>
                    <style>
                        .footer__copyright a {
                            color: #ff55a5;
                            /* Replace '#ff0000' with the color you want */
                            /* You can use color names, hex codes, RGB values, etc. */
                        }
                    </style>
                </div>

            </div>
        </div>
    </footer>
    <!-- end footer -->
