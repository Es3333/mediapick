		$(document).ready(function () {
    // Get the modal
    		var modal = $("#logoutModal");

    // Get the button that opens the modal
    		var logoutButton = $("#logoutButton");

    // When the user clicks on the "Log Out" button, open the modal
    		logoutButton.on("click", function () {
        		modal.show();
    		});

    // When the user clicks on <span> (x), close the modal
    		$(".close").on("click", function () {
        		modal.hide();
    		});

    // Confirm logout action when "Yes" button is clicked
    		$("#confirmLogout").on("click", function () {
        // Redirect to index page
        		window.location.href = "/index"; // Change to the correct index page URL
        // Close the modal
        		modal.hide();
    		});

    // Close modal when "No" button is clicked
    		$("#cancelLogout").on("click", function () {
        		modal.hide();
    		});

    // Close the modal when the user clicks outside of it
    		$(window).on("click", function (event) {
        		if (event.target == modal[0]) {
            		modal.hide();
        		}
    		});
		});


